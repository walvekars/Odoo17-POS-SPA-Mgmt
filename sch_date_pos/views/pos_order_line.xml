<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='products']/field/tree//field[@name='price_unit']" position="after">

                    <field name="appoint_date"/>
                <field name="appoint_time"/>
                <field name="concierge_id"/>
                <field name="resource_id"/>
                <field name="duration"/>

            </xpath>
        </field>
    </record>





</odoo>
